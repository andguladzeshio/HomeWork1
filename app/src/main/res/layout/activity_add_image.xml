<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddImageActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vehicleImageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/button_background"
        android:padding="30dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addVehicleTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Add a vehicle"
        android:layout_marginTop="40dp"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicleImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addVehicleDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineHeight="44dp"
        android:fontFamily="sans-serif-medium"
        android:text="This information will help \nus provide the most\n relevant data"
        android:textColor="@color/text_color_light"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addVehicleTitleTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebookButton"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/button_background_darker"
        android:fontFamily="sans-serif-black"
        android:text="Add +"
        android:paddingVertical="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addVehicleDescriptionTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skipButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/button_background"
        android:fontFamily="sans-serif-medium"
        android:paddingVertical="14dp"
        android:text="Skip"
        android:textAllCaps="false"
        android:textColor="@color/text_color_light"
        android:textSize="22sp"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>